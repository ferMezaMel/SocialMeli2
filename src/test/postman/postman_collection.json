							"",
							"for(let i = 0; i < followersData.length; i++){",
							"    const data = followersData[i];",
							"    const requestInfo = {",
							"        url: `${pm.variables.get(\"baseURL\")}/users/${data.follower}/follow/${data.followed}`,",
							"        method: \"POST\"",
							"    }",
							"",
							"    pm.sendRequest(",
							"        requestInfo, (error, response) => {",
							"            if(error){",
							"                console.log(error);",
							"            }else{",
							"                console.log(response);",
							"            }",
							"    })",
							"}"
